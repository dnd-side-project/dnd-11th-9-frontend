{
  "extends": ["stylelint-config-standard", "stylelint-config-recess-order"],
  "plugins": ["stylelint-order"],
  "customSyntax": "postcss-styled-syntax",
  "rules": {
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "padding-vertical",
          "padding-horizontal",
          "shadow-color",
          "shadow-offset",
          "shadow-radius",
          "shadow-opacity",
          "shadow-blur",
          "elevation"
        ]
      }
    ]
  }
}
